{#
/**
 * @file
 * Theme override to display a node.
 * OVERRIDE the landing page content display for quick links card.
 */
#}
{# set variables #}
{% set image = content.field_webny_landing_hero_image %}
{% set title = content.field_webny_landing_short_title %}
{% set description = content.field_webny_landing_summary2 %}

<article{{ attributes.addClass('webny-quick-links') }}>

    <div{{ content_attributes }}>
        <div class="webny-quick-links-image"><a href="{{ url }}">{{ image }}</a></div>
        <div class="webny-quick-links-card-text">
            <div class="webny-quick-links-title"><a href="{{ url }}">{{ title }}</a></div>
            <div class="webny-quick-links-description">{{ description }}</div>
        </div>
    </div>

</article>
