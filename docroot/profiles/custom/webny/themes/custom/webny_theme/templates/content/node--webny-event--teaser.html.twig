{% extends 'profiles/custom/webny/themes/custom/webny_theme/templates/content/webny--teaser-base.html.twig' %}

{% if (node.field_webny_event_short_title.value is not empty and node.field_webny_event_short_title.value is not null) %}
    {% set title = content.field_webny_event_short_title %}
{% else %}
    {% set title = node.label %}
{% endif %}

{% block hero_image %}
    {% if not content.field_webny_event_heroimage.0 %}
        {{ source('profiles/custom/webny/themes/custom/webny_theme/images/NYGov_Events.svg') }}
    {% else %}
        {{ content.field_webny_event_heroimage }}
    {% endif %}
{% endblock hero_image %}

{% block content %}
    <div class="description">
      {{ content.field_webny_event_summary }}
    </div>
    <div class="event-date">
        {% include '@webny_theme/includes/webny--event-date.html.twig' %}
    </div>
{% endblock content %}
