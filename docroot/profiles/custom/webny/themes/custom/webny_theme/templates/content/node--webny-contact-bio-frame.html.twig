{#
/**
 * @file
 * Theme override to display a node.
 *
 * CREATED BY WEBNY -- iojonep, lmurdock, mcase
 * Override theme for bio frames
 * Available variables:
 * https://api.drupal.org/api/drupal/core!modules!node!templates!node.html.twig/8.2.x 
#}

{# CHECK FOR FRAME BACKGROUND COLOR SELECTED #}
{% if paragraph.field_webny_landing_bio_color.value is not empty and paragraph.field_webny_landing_bio_color.value is not null %}
    {% set landing_bio_color = paragraph.field_webny_landing_bio_color.value %}
{% else %}
    {% set landing_bio_color = ‘’ %}
{% endif %}

{%
  set docclasses = [
    node.bundle ~ "_bioframe"|clean_class,
  ]
%}

{# DEBUG VIA KINT / DEVEL #}


<article{{ attributes.addClass(docclasses) }} class="{{ landing_bio_color }}">
    {{ title_prefix }}

    <div  class="bio-frame-meta">
        <h2>
            <span class="frame-title">
                 {{ content.group_webny_bio_meta_div.field_webny_contact_protitle }}
            </span>
            <span class="frame-headline">
                {{ content.group_webny_bio_meta_div.field_webny_contact_name }}
            </span>
        </h2>
    </div>
        {{ content.group_webny_bio_meta_div|without('field_webny_contact_name', 'field_webny_contact_protitle') }}

    <div class="bio-frame-image">
        {{ content.group_webny_bio_image_div.field_webny_contact_image }}
    </div>

    {{ title_suffix }}
</article>
