{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 *
 * Available variables:
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{# CHECK IF PARAGRAPH ENABLED #}
{% if paragraph.field_webny_wysiwyg_toc.value == 1 %}
    {% set gp_enabled = 'gp_enabled' %}
    {% set gp_status = 'enabled' %}
{% else %}
    {% set gp_enabled = '' %}
    {% set gp_status = 'disabled' %}
{% endif %}


{# DISPLAY THE PARAGRAPH #}
{% block paragraph %}
    <section id="{{ 'toc_' ~ paragraph.id() }}" rel="{{ gp_status }}" class="generic_para {{ paragraph.bundle() }} {{ gp_enabled }}" >
        {#{{ content.field_webny_wysiwyg_title }}
        {{ content.field_webny_wysiwyg_body }}#}
        {{ content|without('field_webny_wysiwyg_toc') }}
        <div class="gp-next-section">
            <div class="gp-next-section-links">
                <p>Next Section</p>
                <p class="icon-thin_down_arrow gp-next-section-link">Continue</p>
            </div>
            <span class="gp-next-section-title"></span>
        </div>
    </section>
{% endblock paragraph %}
