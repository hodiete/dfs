{#
/**
 * @file
 * Theme override of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 * based on views-exposed-form.html.twig
 * WebNY has added the div with .results-exposed-filters-title
 */
#}
{{ attach_library('webny_theme/filter-toggle') }}
{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
{{ q }}
{% endif %}
<div class="results-exposed-filters-title">
    Filters

    <button>Toggle</button>
    <p>Hello</p>
</div>
{{ form }}
