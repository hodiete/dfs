{%
set classes = [
'category-tiles-link--' ~ field_name|clean_class,
]
%}
<div{{ attributes.addClass('category-tile-link-flex') }}>
    {% for item in items %}
        <div{{ item.attributes.addClass(classes) }}>
            <a title="{{ item.content['#title'] }}" href="{{ item.content['#url'] }}">{{ item.content['#title'] }}</a>
        </div>
    {% endfor %}
</div>
