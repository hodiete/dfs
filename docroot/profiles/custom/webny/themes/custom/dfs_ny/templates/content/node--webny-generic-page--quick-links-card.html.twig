{#
/**
 * @file
 * Theme override to display a node.
 * OVERRIDE the generic page content display for quick links card.
 */
#}
{# set variables #}
{% set description = content.field_webny_gencp_sumdes %}
{% if (node.field_webny_generic_short_title.value is not empty and node.field_webny_generic_short_title.value is not null) %}
    {% set title = content.field_webny_generic_short_title %}
{% else %}
    {% set title = node.label %}
{% endif %}

<article{{ attributes.addClass('webny-quick-links') }}>

    <div{{ content_attributes }}>
        <div class="webny-quick-links-image"><a href="{{ url }}">
                {% if (node.field_webny_gencp_heroimage is not empty and node.field_webny_gencp_heroimage is not null) %}
                    {{ content.field_webny_gencp_heroimage }}
                {% else %}
                    <div class="fallback-image">{% include '@dfs_ny/includes/NYS_StateOutline.svg.twig' %}</div>
                {% endif %}

            </a></div>
        <div class="webny-quick-links-card-text">
            <div class="webny-quick-links-title"><a href="{{ url }}">
                    {% if(title|length <= 65) %}
                        {{ title }}
                    {% else %}

                        {% set ws = true %}
                        {% for num in node.label|length..0 %}
                            {% if (num < 65 and  node.label|slice(num)|first == ' ' and ws != false) %}
                                {% set ws = false %}
                                {{ node.label[:num] ~ '...' }}
                            {% endif %}
                        {% endfor %}

                    {% endif %}
                </a></div>
            <div class="webny-quick-links-description">{{ description }}</div>
        </div>
    </div>

</article>
